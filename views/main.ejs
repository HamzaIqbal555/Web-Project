<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body class="container">
  <nav class="navbar navbar-default" style="margin: 0%;">
    <div class="container-fluid">
      <div class="nav-header">
        <a class="navbar-brand" href="/Campgrounds">YelpCamp</a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/login">Login</a></li>
          <li><a href="/register">Sign Up</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="jumbotron " style="margin-bottom: 10px;">
    <h1 class="display-4 text-center">Welcome To YelpCamp!</h1>
    <p class="lead text-center">View our hand-picked mountains from all over the Pakistan.</p>
    <p class="lead text-center ">
      <a class="btn btn-primary btn-lg" href="/new" role="button">Add New Campground</a>
    </p>
  </div>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% campgrounds.forEach(campground=> { %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= campground.image %>" width="375px" height="auto">
          <div class="caption">
            <h4>
              <%= campground.name %>
            </h4>
          </div>
          <p>
            <a href="/Campgrounds/<%= campground._id %>" class="btn btn-primary">View Info</a>
          </p>
        </div>
      </div>
      <% }); %>
  </div>
</body>

</html>